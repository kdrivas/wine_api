name: test_pipeline

entry_points:
    train:
        parameters:
            data: {type: string, default: "s3://rimac-analytics-temporal/individuals/Dante/mlflow_testing/data/input/raw/winequalityN.csv"}
            target_col: {type: string, default: "quality"}
            max_depth: {type: int, default: 10}
            min_samples_leaf: {type: int, default: 32}
            random_state: {type: int, default: 0}
        command: "python src/train.py {data}
                            --target_col {target_col}
                            --max_depth {max_depth}
                            --min_samples_leaf {min_samples_leaf}
                            --random_state {random_state}"